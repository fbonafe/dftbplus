 Geometry = GenFormat {
    2  C
    H
    1 1      0.00000000      0.00000000      -0.5
    2 1      0.00000000      0.00000000       0.5
 }
 Driver = {}
Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1.0E-10 # abnormally tight tolerance used for accuracy
  MaxAngularMomentum = {
    H = "s"
  }
  Charge = 0.0
  Filling = Fermi {
    Temperature [Kelvin] = 273.15
  }
  SlaterKosterFiles = Type2FileNames {
Prefix = /home/matias/Documents/GitHub/proyecto_MPI/dftbplus/external/slakos/origin/mio-1-1/
    Separator = "-"
    Suffix = ".skf"
  }
}

Options = {
  WriteAutotestTag = Yes
}


InputVersion = 20.1

ElectronDynamics = {
  Steps = 10
  TimeStep [au] = 0.2
  WriteFrequency = 1
  Perturbation = Laser {
    PolarizationDirection = 0.0 0.0 1.0
    LaserEnergy [eV] = 6.795
  }
  FieldStrength [v/a] = 0.1
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
  # Due to small size of problem, allow 2 MPI processors by shrinking blocks
  Blacs = BlockSize {
    16
  }
}
